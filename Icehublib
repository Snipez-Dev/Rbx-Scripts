local IceHub = {}

function IceHub:CreateWindow(title)
    -- UI erstellen
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "IceHubUI"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")

    -- Hauptfenster
    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 600, 0, 300)
    mainFrame.Position = UDim2.new(0.5, -300, 0.5, -150)
    mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    mainFrame.Parent = screenGui

    -- Titel
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 30)
    titleLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    titleLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
    titleLabel.Text = title
    titleLabel.Parent = mainFrame

    -- Tab-Leiste
    local tabBar = Instance.new("Frame")
    tabBar.Size = UDim2.new(1, 0, 0, 30)
    tabBar.Position = UDim2.new(0, 0, 0, 30)
    tabBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    tabBar.Parent = mainFrame

    -- Inhaltsbereich
    local contentFrame = Instance.new("Frame")
    contentFrame.Size = UDim2.new(1, 0, 1, -60)
    contentFrame.Position = UDim2.new(0, 0, 0, 60)
    contentFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    contentFrame.Parent = mainFrame

    local window = {Tabs = {}, Content = contentFrame, TabBar = tabBar}

    -- Tab-Erstellung
    function window:CreateTab(name)
        local tabButton = Instance.new("TextButton")
        tabButton.Size = UDim2.new(0, 100, 1, 0)
        tabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        tabButton.Text = name
        tabButton.Parent = tabBar

        local tabFrame = Instance.new("Frame")
        tabFrame.Size = UDim2.new(1, 0, 1, 0)
        tabFrame.BackgroundTransparency = 1
        tabFrame.Visible = false
        tabFrame.Parent = contentFrame

        local tab = {Elements = {}, Frame = tabFrame}

        function tab:CreateButton(text, callback)
            local button = Instance.new("TextButton")
            button.Size = UDim2.new(1, -10, 0, 40)
            button.Position = UDim2.new(0, 5, 0, #self.Elements * 45)
            button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.Text = text
            button.Parent = tabFrame

            button.MouseButton1Click:Connect(callback)
        end

        function tab:CreateLabel(text)
            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(1, -10, 0, 30)
            label.Position = UDim2.new(0, 5, 0, #self.Elements * 35)
            label.BackgroundTransparency = 1
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.Text = text
            label.Parent = tabFrame
        end

        function tab:CreateSlider(text, min, max, default, callback)
            local slider = Instance.new("TextButton")
            slider.Size = UDim2.new(1, -10, 0, 40)
            slider.Position = UDim2.new(0, 5, 0, #self.Elements * 45)
            slider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            slider.TextColor3 = Color3.fromRGB(255, 255, 255)
            slider.Text = text .. ": " .. default
            slider.Parent = tabFrame

            slider.MouseButton1Click:Connect(function()
                callback(default)
            end)
        end

        function tab:CreateDropdown(text, options, callback)
            local dropdown = Instance.new("TextButton")
            dropdown.Size = UDim2.new(1, -10, 0, 40)
            dropdown.Position = UDim2.new(0, 5, 0, #self.Elements * 45)
            dropdown.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
            dropdown.Text = text
            dropdown.Parent = tabFrame

            dropdown.MouseButton1Click:Connect(function()
                callback(options[1]) -- Setzt Standardwert
            end)
        end

        function tab:CreateCheckbox(text, default, callback)
            local checkbox = Instance.new("TextButton")
            checkbox.Size = UDim2.new(1, -10, 0, 40)
            checkbox.Position = UDim2.new(0, 5, 0, #self.Elements * 45)
            checkbox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            checkbox.TextColor3 = Color3.fromRGB(255, 255, 255)
            checkbox.Text = text .. " [" .. (default and "✓" or "✗") .. "]"
            checkbox.Parent = tabFrame

            local state = default
            checkbox.MouseButton1Click:Connect(function()
                state = not state
                checkbox.Text = text .. " [" .. (state and "✓" or "✗") .. "]"
                callback(state)
            end)
        end

        table.insert(window.Tabs, tab)

        tabButton.MouseButton1Click:Connect(function()
            for _, t in pairs(window.Tabs) do
                t.Frame.Visible = false
            end
            tabFrame.Visible = true
        end)

        return tab
    end

    return window
end

return IceHub
